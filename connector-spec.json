{
	"name": "airtable-v4",
	"keyType": "simple",
	"commands": [
		"std:account:list",
		"std:account:read",
		"std:entitlement:list",
		"std:entitlement:read",
		"std:test-connection",
		"std:account:update",
		"std:account:create",
		"std:account:delete",
		"std:account:disable",
		"std:account:enable",
		"std:account:unlock"
	],
	"sourceConfig": [
		{
			"type": "menu",
			"label": "Configuration",
			"items": [
				{

                    "type": "section",
                    "sectionTitle": "Authentication",
                    "sectionHelpMessage": "Provide the parameters to connect with the airtable worksheet.",
                    "items": [
                        {
                            "key": "apiKey",
                            "label": "API Key",
                            "required": true,
                            "type": "secret"
                        },
						{
                            "key": "airtableBase",
                            "label": "airtable base ID",
                            "required": true,
                            "type": "secret"
                        }
                    ]
				}
			]
		}
	],
	"accountSchema": {
		"displayAttribute": "id",
		"identityAttribute": "id",
		"groupAttribute": "entitlements",
		"attributes": [
			{
				"name": "displayName",
				"type": "string",
				"description": "Display Name of the account"
			},
			{
				"name": "id",
				"type": "string",
				"description": "unique Id of the account"
			},
			{
				"name": "email",
				"type": "string",
				"description": "Email of the account"
			},
			{
				"name": "department",
				"type": "string",
				"description": "Deparment"
			},
			{
				"name": "firstName",
				"type": "string",
				"description": "First Name of the Account"
			},
			{
				"name": "lastName",
				"type": "string",
				"description": "Email of the account"
			},
			{
				"name": "entitlements",
				"type": "string",
				"entitlement": true,
				"managed": true,
				"multi": true,
				"description": "The groups the user belongs to presented as an array of strings"
			}
		]
	},
	"entitlementSchemas": [
		{
			"type": "group",
			"displayAttribute": "name",
			"identityAttribute": "id",
			"attributes": [
				{
					"name": "id",
					"type": "string",
					"description": "Unique ID of the group (ex. admin)"
				},
				{
					"name": "name",
					"type": "string",
					"description": "The display name of the group (ex. Admin)"
				}
			]
		}
	],
	"accountCreateTemplate": {
		"fields": [
			{
				"key": "email",
				"label": "Email",
				"type": "string",
				"required": true,
				"initialValue": {
					"type": "identityAttribute",
					"attributes": {
						"name": "email"
					}
				}
			},
			{
				"key": "id",
				"label": "id",
				"type": "string",
				"required": true,
				"initialValue": {
					"type": "identityAttribute",
					"attributes": {
						"name": "uid"
					}
				}
			},
			{
				"key": "password",
				"label": "Password",
				"type": "string",
				"required": true,
				"initialValue": {
					"type": "generator",
					"attributes": {
						"name": "Create Password"
					}
				}
			},
			{
				"key": "department",
				"label": "Department",
				"type": "string",
